<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SalaryFragment">
    <include layout="@layout/calender_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_70sdp"

        android:gravity="center"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="Salary Slip Details"
            android:textColor="@color/txt"
            android:textSize="@dimen/_14sdp" />

        <Spinner
            android:id="@+id/select_year"
            android:textColorHint="@color/gray_color"
            android:textColor="@color/gray_color"
            android:background="@drawable/ractangleshape"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <Spinner
            android:id="@+id/select_month"
            android:textColorHint="@color/gray_color"
            android:textColor="@color/gray_color"
            android:background="@drawable/ractangleshape"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edittext_background1"
            android:gravity="center"
            android:padding="10dp"
            android:text="View Salary Slip"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />



    </LinearLayout>


</FrameLayout>