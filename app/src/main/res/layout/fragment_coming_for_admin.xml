<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ComingRequestForAdmin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"

        android:background="@drawable/bgexpense"
        tools:context=".fragment.WorkFromHome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Upcoming Request"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/comimg_req_admin"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_10sdp"

                android:layout_height="@dimen/_160sdp"/>

            <LinearLayout
                android:id="@+id/view_all_req"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_alignParentBottom="true"

                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:background="@drawable/groupshare"
                    android:layout_gravity="end"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- <include layout="@layout/meetings_view"/>
             <include layout="@layout/meetings_view"/>
             <include layout="@layout/meetings_view"/>-->

        </LinearLayout>
    </FrameLayout>


</LinearLayout>