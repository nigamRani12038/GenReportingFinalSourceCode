<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AttendanceshowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_70sdp"
        android:background="@drawable/background"
        android:orientation="vertical"
       >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_60sdp"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Attendance Details"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/_14sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Present Day"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/present_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="Present Day"
                    android:background="@drawable/ractangleshape"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/_11sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Absent Day"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/absent_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="Absent Day"
                    android:background="@drawable/ractangleshape"

                    android:textColor="@color/txt"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Adjust Day"

                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/adjust_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="adjust Day"
                    android:background="@drawable/ractangleshape"

                    android:textColor="@color/txt"
                    android:textSize="@dimen/_11sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Adjust By Name"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/adjust_by_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="adjustByName"
                    android:background="@drawable/ractangleshape"

                    android:textColor="@color/txt"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="adjustCode"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/adjust_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="adjustCode"
                    android:background="@drawable/ractangleshape"

                    android:textColor="@color/txt"
                    android:textSize="@dimen/_11sdp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>