<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ApplyLeaveFragment">

    <include layout="@layout/calender_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_70sdp"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_60sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/remain_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="Remaining Leaves : 08"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/dotedlineblue"
                    android:layerType="software" />

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendar_view_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    app:mcv_selectionMode="range"
            />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="5dp"
                    android:src="@drawable/dotedlineblue"
                    android:layerType="software" />

                <EditText
                    android:id="@+id/purpose_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/ractangleshape"
                    android:cursorVisible="true"
                    android:hint="Purpose"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/_11sdp" />


                <Spinner
                    android:id="@+id/leave_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/ractangleshape"
                    android:drawableRight="@drawable/dateicon"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/txt"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/_11sdp" />

                <Spinner
                    android:id="@+id/halfDaySelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:visibility="gone"
                    android:background="@drawable/ractangleshape"
                    android:drawableRight="@drawable/dateicon"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/txt"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/_11sdp" />
                <Spinner
                    android:id="@+id/shortLeaveSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:visibility="gone"
                    android:background="@drawable/ractangleshape"
                    android:drawableRight="@drawable/dateicon"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/txt"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/_11sdp" />


                <Button
                    android:id="@+id/aply_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edittext_background1"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Apply Leave"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>