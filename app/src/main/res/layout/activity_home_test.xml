<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/H20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.15"
            android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/V05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.02"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/V30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.30"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/H20"
            app:layout_constraintStart_toStartOf="@+id/V05"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/left_circular_border">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Vv30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.30"
                android:orientation="vertical"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Vv90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.90"
                android:orientation="vertical"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Hh20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.20"
                android:orientation="horizontal"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Hh40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.40"
                android:orientation="horizontal"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Hh60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.60"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/Vv30"
                android:padding="@dimen/_5sdp"
                >

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/user"
                    app:siRadius="100dp"
                    app:siSquare="true"
                    app:siBorderAlpha="0.3"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/img_slide_gen"
                android:layout_gravity="right"
                android:src="@drawable/slide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/Hh20"
                app:layout_constraintStart_toStartOf="@id/Vv90"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="#042732" />
            <TextView
                android:id="@+id/employee_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="start"
                android:text="Employee Name"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/Vv30"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/login_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:text="Login Time"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:paddingTop="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:background="@drawable/complete_circular_border"
                app:layout_constraintTop_toTopOf="@id/Hh40"
                app:layout_constraintStart_toStartOf="@id/Vv30"
                />
            <TextView
                android:id="@+id/PWHTV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:text="PWD"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:paddingTop="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:background="@drawable/complete_circular_border"
                app:layout_constraintTop_toTopOf="@id/Hh40"
                app:layout_constraintStart_toEndOf="@id/login_time"
                />
            <TextView
                android:id="@+id/CWHTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:text="CWD"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:paddingTop="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:background="@drawable/complete_circular_border"
                app:layout_constraintTop_toTopOf="@id/Hh40"
                app:layout_constraintStart_toEndOf="@id/PWHTV"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/PWHTV"
                app:layout_constraintBottom_toBottomOf="@+id/PWHTV"
                app:layout_constraintStart_toStartOf="@id/PWHTV"
                app:layout_constraintEnd_toEndOf="@+id/CWHTv"
                android:backgroundTint="#FFFFFF"
                android:layout_margin="@dimen/_minus5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/complete_circular_border"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/Vv30"
                app:layout_constraintEnd_toEndOf="parent">


                <TextView
                    android:id="@+id/text_header1"
                    android:layout_width="match_parent"
                    android:text="Select from and to date"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="@dimen/_10sdp"
                    android:gravity="start"
                    android:capitalize="characters"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="5"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/H20"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>