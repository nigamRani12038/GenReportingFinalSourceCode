<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyProfileFragment">

    <include layout="@layout/profile_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@drawable/background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/personal_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@drawable/edittext_background1"
                android:text="Personal Details"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/profesional_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@drawable/edittext_background1"
                android:text="Professional Details"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/personal_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/emp_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Name"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Father Name"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/f_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Faher Name"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Mother Name"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/m_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Mother Name"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/_11sdp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Mail Id"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/mail_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Employee Mail Id"
                        android:textColor="@color/txt"
                        android:singleLine="true"
                        android:textColorHint="@color/txt"
                        android:textSize="@dimen/_11sdp" />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Gender"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Gender"
                        android:textColor="@color/txt"
                        android:textColorHint="@color/txt"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Mobile Number"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Employee Mobile Number"
                        android:textColor="@color/txt"
                        android:singleLine="true"
                        android:textColorHint="@color/txt"
                        android:textSize="@dimen/_11sdp" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Marital Status"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/marital_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Employee Mail Id"
                        android:textColor="@color/txt"
                        android:singleLine="true"
                        android:textColorHint="@color/txt"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Password"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="password"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/txt"
                        android:textColorHint="@color/txt"
                        android:textSize="@dimen/_11sdp" />

                    <Button
                        android:id="@+id/update_prof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/edittext_background1"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:text="Update Profile"
                        android:textAllCaps="false"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profesional_detail"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Code"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/emp_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Code"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Desgination"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/emp_desgination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Desgination"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Date Of Joining"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/doj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Of Joining"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="official Mail Id"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/official_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="official Mail Id"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Department"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>