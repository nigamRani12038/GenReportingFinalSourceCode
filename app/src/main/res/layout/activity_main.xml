<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/_166sdp"
            android:layout_height="@dimen/_151sdp"
            android:background="@drawable/group" />

        <TextView
            android:layout_width="@dimen/_195sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="Login to Get Started"
            android:textColor="@color/txtcolor"
            android:textSize="@dimen/_20sdp" />

        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/ractangleshape"
            android:hint="Email Id"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColorHint="@color/txtcolor"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/ractangleshape"
            android:hint="Password"
            android:textColorHint="@color/txtcolor"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:password="true"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/forgot_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:text="Forgot Password"
            android:textColor="@color/txtcolor" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/edittext_background1"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/_16sdp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/genesislogo" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>