<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProjectFragments">


    <include layout="@layout/calender_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center"
        android:layout_marginTop="@dimen/_70sdp"
        android:orientation="vertical">
        <ScrollView
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_60sdp"

            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
              <!--  <TextView
                    android:id="@+id/remain_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="Remaining Leaves : 08"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/_14sdp" />
-->
                <!-- <TextView
                     android:id="@+id/date_from_leave_aply"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="20dp"
                     android:layout_marginTop="@dimen/_8sdp"
                     android:background="@drawable/ractangleshape"
                     android:drawableRight="@drawable/dateicon"
                     android:padding="@dimen/_8sdp"
                     android:text="Date From"
                     android:textColor="@color/txt"
                     android:textSize="@dimen/_11sdp" />

                 <TextView
                     android:id="@+id/date_to_aply_leave"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="20dp"
                     android:layout_marginTop="@dimen/_5sdp"
                     android:background="@drawable/ractangleshape"
                     android:drawableRight="@drawable/dateicon"
                     android:padding="@dimen/_8sdp"
                     android:text="Date To"
                     android:textColor="@color/txt"
                     android:textSize="@dimen/_11sdp" />

         -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/dotedlineblue"
                    android:layerType="software" />

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendar_view_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"

                    app:mcv_selectionMode="range"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="5dp"
                    android:src="@drawable/dotedlineblue"
                    android:layerType="software" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Project Name"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textColor="@color/txtcolor"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/project_name_spin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/ractangleshape"
                    android:drawableRight="@drawable/dateicon"
                    android:textColor="@color/txt"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Task Name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/txtcolor"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/task_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/ractangleshape"
                    android:hint="Task Name"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Task Description"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/txtcolor"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/ractangleshape"
                    android:hint="Task Description"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/_11sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:text="Assigned To"
                    android:textColor="@color/txtcolor"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/task_assigned_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/ractangleshape"
                    android:drawableRight="@drawable/dateicon"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/txt"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/_11sdp" />


                <Button
                    android:id="@+id/task_assigned_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/edittext_background1"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Assign Task"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>